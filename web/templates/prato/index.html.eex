<h2>Listing pratos</h2>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor</th>


      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for prato <- @pratos do %>
    <tr>
      <td><%= prato.nome %></td>
        <td><%= prato.valor %></td>
          <td><%= prato.restaurante_id %></td>


      <td class="text-right">
        <%= link "Show", to: restaurante_prato_path(@conn, :show, @restaurante_id, prato), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: restaurante_prato_path(@conn, :edit, @restaurante_id, prato), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: restaurante_prato_path(@conn, :delete, @restaurante_id, prato), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>


<%= link "Novo Prato", to: restaurante_prato_path(@conn, :new, @restaurante_id) %>
